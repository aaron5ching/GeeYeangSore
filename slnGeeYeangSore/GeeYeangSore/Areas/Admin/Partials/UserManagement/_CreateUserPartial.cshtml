@model GeeYeangSore.Areas.Admin.ViewModels.UserManagement.CEditUserViewModel

<form id="createForm" enctype="multipart/form-data">
    <div class="container">

        <!-- 🧍 房客資訊 -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">新增房客</div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label class="form-label">姓名</label>
                    <input class="form-control" name="HUserName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">生日</label>
                    <input type="date" class="form-control" name="HBirthday" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">性別</label>
                    <select class="form-select" name="HGender">
                        <option value="true">男</option>
                        <option value="false">女</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">驗證狀態</label>
                    <select class="form-select" name="HStatus">
                        <option value="未驗證">未驗證</option>
                        <option value="驗證中">驗證中</option>
                        <option value="已驗證">已驗證</option>
                        <option value="封鎖中">封鎖中</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">電話</label>
                    <input class="form-control" name="HPhoneNumber" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">電子郵件</label>
                    <input type="email" class="form-control" name="HEmail" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">密碼</label>
                    <input type="text" class="form-control" name="HPassword" />
                </div>
                <div class="col-md-12">
                    <label class="form-label">居住地</label>
                    <input class="form-control" name="HAddress" />
                </div>

                <div class="col-md-6 d-flex flex-column">
                    <label class="form-label">房客照片</label>
                    <img id="tenantPhotoPreview" src="/images/default.png"
                         class="img-fluid border mb-2"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                    <input type="hidden" name="HImages" id="HImages" />
                </div>
                <div class="col-md-6 d-flex align-items-end justify-content-end">
                    <input type="file" class="form-control d-none" id="uploadTenantPhotoInput" />
                    <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('uploadTenantPhotoInput').click()">上傳照片</button>
                </div>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-warning">確認新增</button>
        </div>
    </div>
</form>
